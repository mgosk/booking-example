# admin
GET         /api/admin/users                                              admin.AdminController.usersList

# sale
POST        /api/sale/invoices                                            sale.controllers.InvoiceController.create
PUT         /api/sale/invoices/:id                                        sale.controllers.InvoiceController.update(id: sale.model.InvoiceId)
GET         /api/sale/invoices/:id                                        sale.controllers.InvoiceController.get(id: sale.model.InvoiceId)
GET         /api/sale/invoices/:id/pdf                                    sale.controllers.InvoiceController.pdf(id: sale.model.InvoiceId)
GET         /api/sale/invoices                                            sale.controllers.InvoiceController.list
GET         /api/sale/numberingSeries                                     sale.controllers.NumberingSeriesController.list
GET         /api/sale/numberingSeries/by-invoice-kind/:invoiceKind        sale.controllers.NumberingSeriesController.listByInvoiceKind(invoiceKind: sale.model.InvoiceKind)
GET         /api/sale/numberingSeries/:id                                 sale.controllers.NumberingSeriesController.get(id: sale.model.NumberingSeriesId)
GET         /api/sale/numberingSeries/:id/next-numbers                    sale.controllers.NumberingSeriesController.getNextNumbers(id: sale.model.NumberingSeriesId)
PUT         /api/sale/numberingSeries/:id/next-numbers                    sale.controllers.NumberingSeriesController.setNextNumbers(id: sale.model.NumberingSeriesId)


